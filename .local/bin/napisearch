#!/bin/sh

# dependecies:
    # zenity
    # enca
    # napi.sh
    # ffmpeg

# set -e

FINAL_PATH="$(echo $@ | grep -o ".*\.")srt"

echo $DOWNLOADED_FILE
enca -L pl -x UTF-8  -C iconv $@ 1> /dev/null
ffmpeg -i $@ "$FINAL_PATH" 1> /dev/null
sed -i -r "s/^\/(.*)/<i>\1<\/i>/" $FINAL_PATH
sed -i -e "s/\r//g" $FINAL_PATH
rm $@
