{
    "cSpell.enabled": false,
    "cSpell.enabledLanguageIds": [
        "EN",
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "git-commit",
        "go",
        "handlebars",
        "haskell",
        "html",
        "jade",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "tex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pug",
        "python",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "vim",
        "yaml",
        "yml"
    ],
    "cSpell.language": "en,pl",
    "cSpell.showStatus": true,
    "cSpellExt.enableDictionaries": [
        "english",
        "polish"
    ],
    "clangd.fallbackFlags": [
        "-std=c++17"
    ],
    "clangd.semanticHighlighting": true,
    "clangd.arguments": [
        "--clang-tidy"
    ],
    "cmake.cmakePath": {
        "type": "string",
        "default": "cmake",
        "description": "The path to CMake generator executable"
    },
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.formatOnSaveFiletypes": [
        "rust",
        "c",
        "cpp",
        "json",
        "python"
    ],
    "highlight.disableLanguages": [
        "python"
    ],
    "coc.preferences.colorSupport": true,
    "rust.clippy_preference": "on",
    "diagnostic.joinMessageLines": true,
    "diagnostic.maxWindowHeight": 20,
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ]
        }
    },
    "python.formatting.provider": "black",
    "python.jediEnabled": true,
    "python.linting.flake8Args": [
        "--max-line-length",
        "88"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "suggest.maxPreviewWidth": 120
}
